#!/bin/bash

# Do not run as CGI
if [ -n "$GATEWAY_INTERFACE" ] ; then
    echo 'Can not invoke as CGI!'
    exit 1
fi

# These do not support runkit
case "$TRAVIS_PHP_VERSION" in
    hhvm*|7.0|7.1|7.2|nightly)
        exit 0
        ;;
esac

set -e
set -x

pecl install runkit

phpenv config-add test/php-runkit.ini
